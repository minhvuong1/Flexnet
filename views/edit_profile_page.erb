<form action="/edit" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="hidden" name="id" value="<%= find_one_user_by_email(session[:user_email])["id"] %>">
    <label for="">Username</label>
    <input type="text" name="username" value="<%= find_one_user_by_email(session[:user_email])["username"] %>">
    <label for="">Name</label>
    <input type="text" name="name" value="<%= find_one_user_by_email(session[:user_email])["name"] %>">
    <label for="">Bio</label>
    <input type="text" name="bio" value="<%= find_one_user_by_email(session[:user_email])["bio"] %>">
    <label for="">Profile Pic</label>
    <input type="text" name="image_url" value="<%= find_one_user_by_email(session[:user_email])["image_url"]%>">
    <button>Update</button>
</form>

